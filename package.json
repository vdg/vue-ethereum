{
  "name": "vue-ethereum",
  "version": "0.2.4",
  "description": "Vue and Nuxt plugins for easy access to Ethereum (using web3.js 1.x)",
  "main": "dist/vue-ethereum.ssr.js",
  "module": "dist/vue-ethereum.esm.js",
  "files": [
    "dist",
    "src",
    "nuxt"
  ],
  "repository": "vdg/vue-ethereum",
  "author": {
    "name": "Valentin D. Guillois",
    "email": "vdg@rouge.network",
    "url": "https://github.com/vdg"
  },
  "license": "MIT",
  "keywords": [
    "ethereum",
    "web3",
    "vue",
    "vuex",
    "nuxt",
    "plugin"
  ],
  "scripts": {
    "test": "exit 0;",
    "prepublish": "yarn run build",
    "release": "release-it",
    "precommit": "lint-staged",
    "lint": "eslint src/*.js examples/vue-example",
    "dev-vue": "NODE_ENV=test poi examples/vue-example/index.js",
    "build": "rollup -c --environment BUILD:production"
  },
  "release-it": {
    "github": {
      "release": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "prettier-config-standard",
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "examples/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint",
      "pre-push": "yarn run lint"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.0-beta.3",
    "css-loader": "^0.28.11",
    "epic-spinners": "^1.0.3",
    "escape-string-regexp": "^1.0.5",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-standard": "^14.0.1",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "poi": "^10.2.3",
    "prettier": "^1.18.2",
    "prettier-config-standard": "^1.0.1",
    "release-it": "^12.3.6",
    "rollup": "^1.20.3",
    "rollup-plugin-vue": "^5.0.1",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.7.1",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "vuex": "^3.0.1",
    "web3": "1.x"
  },
  "peerDependencies": {
    "vue": "^2.5.16",
    "web3": "1.x"
  }
}
